terraform {
  required_version = "= 1.14.5"

  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "4.61.0"
    }

    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "2.32.0"
    }

    statuscake = {
      source  = "StatusCakeDev/statuscake"
      version = "2.2.2"
    }
  }

  backend "azurerm" {
    container_name = "terraform-state"
  }
}
